set surround
set commentary
set ideajoin
set ideamarks

set nu rnu
set ignorecase
set smartcase
set incsearch
set scrolloff=5
" set iskeyword-=_
set visualbell

let mapleader=" "

" Don't use Ex mode, use Q for formatting.
map Q gq

" Jump to next/prev
nnoremap ]c :action VcsShowNextChangeMarker<CR>
nnoremap [c :action VcsShowPrevChangeMarker<CR>
nnoremap ]m :action MethodDown<CR>
nnoremap [m :action MethodUp<CR>
nnoremap ]e :action GotoNextError<CR>
nnoremap [e :action GotoPreviousError<CR>
nnoremap ]u :action GotoNextElementUnderCaretUsage<CR>
nnoremap [u :action GotoPrevElementUnderCaretUsage<CR>

" Leader maps
noremap <leader><leader> :action HideAllWindows<CR>
noremap <leader>rr :action RenameElement<CR>
noremap <leader><Esc> :action ShowErrorDescription<CR>
noremap <leader><CR> :action ShowIntentionActions<CR>
noremap <leader>d :action QuickJavaDoc<CR>
noremap <leader>a :action ParameterInfo<CR>
noremap <leader>P :action ToggleLineBreakpoint<CR>
noremap <leader>gt :action GotoTest<CR>
noremap <leader>s :action InsertLiveTemplate<CR>

" Run/debug test under cursor
noremap <leader>tt :action RunClass<CR>
noremap <leader>td :action DebugClass<CR>

" Tab manipulation
noremap <leader>ww :action MoveEditorToOppositeTabGroup<CR>
noremap <leader>wq :action CloseContent<CR>
noremap <leader>wQ :action CloseAllEditors<CR>


" Copy/paste to clipboard
noremap <leader>y "+y
noremap <leader>p "+p

" Reload configuration
noremap <leader>R :source ~/.config/ideavim/ideavimrc<CR>
