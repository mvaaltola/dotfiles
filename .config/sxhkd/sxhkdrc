# terminal
super + Return
    kitty

# launcher
super + d
    rofi -show combi -modi combi

# clipboard manager
super + c
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# dunst notifications
super + {_,shift +} o
    dunstctl {close,history-pop}

# volume controls
XF86Audio{Raise,Lower}Volume
    pamixer {-i,-d} 2

super + {XF86AudioRaiseVolume, F12}
    pamixer {-i,-d} 2

{XF86AudioMute, super + F11}
    pamixer -t

# media controls
XF86Audio{Play,Next,Prev}
    playerctl {play-pause,next,previous}

super + {F9,F8,F10}
    playerctl {play-pause,previous,next}

super + shift + {F8,F10}
    playerctl position 5{-,+}

super + shift + F9
    notify-send "$(playerctl metadata title)" "$(playerctl metadata artist)/$(playerctl metadata album)"

# brightness controls
XF86MonBrightness{Up,Down}
    brightnessctl s 10{+,-}%

# printscreen
Print
    flameshot gui

# lockscreen
super + shift + @Escape
    betterlockscreen -l blur

# calculator
XF86Calculator
    speedcrunch

# screen layout home/away
super + {_,shift +} F3
    ~/.config/screenlayout/{home,noext}.sh

# leader keymaps
super + space; r; s
    sxhkdreload

super + space; r; w
    wpreload

super + space; r; p
    picomreload

super + space; r; m
    monreload

super + space; r; d
    dunstreload

super + space; r; r
    redshiftreload

super + space; q; q
    qgis

super + space; q; d
    qgisdefault

super + space; q; t
    qgiskimu

super + space; q; m
    qgismodelbaker
