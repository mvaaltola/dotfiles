# volume controls
XF86Audio{Raise,Lower}Volume
    pamixer {-i,-d} 2

super + {XF86AudioRaiseVolume, F12}
    pamixer {-i,-d} 2

{XF86AudioMute, super + F11}
    pamixer -t

# media controls
XF86Audio{Play,Next,Prev}
    playerctl {play-pause,next,previous}

super + {F9,F8,F10}
    playerctl {play-pause,previous,next}

super + shift + {F8,F10}
    playerctl position {5-,5+}

super + shift + F9
    notify-send "$(playerctl metadata title)" "$(playerctl metadata artist)/$(playerctl metadata album)"

# clipboard manager
super + c
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# brightness controls
XF86MonBrightness{Up,Down}
    sudo xbacklight {-inc,-dec} 10

# printscreen
Print
    flameshot gui

# lockscreen
super + shift + @Escape
    betterlockscreen -l blur -t "enter pass"

# calculator
XF86Calculator
    speedcrunch

# screen layout home/away
super + {_,shift +} F10
    ~/.config/screenlayout/{home,noext}.sh

# compositor reload
super + shift + F11
    ~/.local/bin/picomreload

# reload/set bg
super + {_,shift +} F12
    ~/.local/bin/{wpreload,setbg}

# leader keymaps
super + space; r
    sxhkdreload

super + space; i
    idea

super + space; q; q
    qgisdefault

super + space; q; d
    qgis

super + space; q; p
    pistemeta
